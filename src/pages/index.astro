---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Projects from "../layouts/Projects.astro";
import { SITE_TITLE, SITE_DESCRIPTION, ABOUT_ME } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section
        id="hero"
        class="flex w-full flex-col items-center justify-between md:flex-row"
      >
        <!-- Left Content: Text, Socials, and Buttons -->
        <div class="text-gray flex w-[52%] flex-col gap-6">
          <h2 class="text-white-mute font-code text-3xl">&lt;Hello&gt;</h2>
          <h1 class="text-4xl font-semibold md:text-5xl">
            I'm <span class="text-primary">Santanu</span>
          </h1>
          <h3 class="text-3xl font-normal md:text-[42px]">
            I'm a<span class="font-code text-white">
              <span class="text-primary">{"{"}</span>Software Engineer<span
                class="text-primary">{"}"}</span
              >
            </span>
          </h3>
          <p class="text-gray mt-2 text-lg">
            Full-stack developer skilled in Python and TypeScript, building
            real-time and cloud-native scalable applications.
          </p>

          <!-- Social Media Icons -->
          <div class="mt-2 flex items-center space-x-4 text-2xl">
            <a
              href="#"
              class="text-gray-400 transition-colors duration-300 hover:text-white"
              aria-label="LinkedIn"
            >
              <i class="ri-linkedin-fill"></i>
            </a>
            <a
              href="#"
              class="text-gray-400 transition-colors duration-300 hover:text-white"
              aria-label="GitHub"
            >
              <i class="ri-github-fill"></i>
            </a>
            <a
              href="#"
              class="text-gray-400 transition-colors duration-300 hover:text-white"
              aria-label="Twitter/X"
            >
              <i class="ri-twitter-x-line"></i>
            </a>
          </div>

          <!-- Action Buttons -->
          <div class="mt-4 flex items-center gap-4">
            <a
              href="#"
              class="bg-primary rounded-full px-8 py-2 font-semibold text-white shadow-lg shadow-teal-500/20 transition-all duration-300 hover:bg-teal-600"
              >Contact</a
            >
            <a
              href="#"
              class="rounded-full border border-gray-600 px-8 py-2 font-semibold text-gray-300 transition-all duration-300 hover:border-gray-500 hover:bg-gray-800"
              >Download CV</a
            >
          </div>
        </div>

        <!-- Right Content: Code Snippet -->
        <div
          class="font-code w-[43%] rounded-lg border border-gray-700 bg-[#161B22] shadow-2xl"
        >
          <!-- Window Header -->
          <div class="flex items-center gap-2 border-b border-gray-700 p-3">
            <div class="flex flex-1 items-center gap-4 text-sm">
              <span
                class="-mb-3 border-b-2 border-yellow-400 px-2 pb-3 text-yellow-400"
              >
                üìú skills.js
              </span>
              <span class="cursor-pointer text-gray-500 hover:text-gray-300">
                üêç master.py
              </span>
            </div>
          </div>
          <!-- Code Area -->
          <pre
            class="text-white-mute overflow-x-auto p-4 text-sm"><code class="language-js"><span class="text-gray">// Tech I work with</span>

<span class="text-blue-400">const</span> techStack = {'{'}
  <span class="text-green-400">'frontend'</span>:  [<span class="text-orange-400">'HTML'</span>, <span class="text-orange-400">'Tailwind'</span>, <span class="text-orange-400">'JavaScript'</span>,
               <span class="text-orange-400">'TypeScript'</span>,<span class="text-orange-400">'Vue'</span>,<span class="text-orange-400">'Svelte'</span>],

  <span class="text-green-400">'backend'</span>:   [<span class="text-orange-400">'Django'</span>, <span class="text-orange-400">'FastAPI'</span>,<span class="text-orange-400">'PostgreSQL'</span>,
               <span class="text-orange-400">'MongoDB'</span>, <span class="text-orange-400">'Redis'</span>, <span class="text-orange-400">'RabbitMQ'</span>, <span class="text-orange-400">'Celery'</span>],

  <span class="text-green-400">'languages'</span>: [<span class="text-orange-400">'Python'</span>, <span class="text-orange-400">'JavaScript/TypeScript'</span>],

  <span class="text-green-400">'DevOps'</span>:    [<span class="text-orange-400">'Docker'</span>, <span class="text-orange-400">'Ansible'</span>, <span class="text-orange-400">'Terraform'</span>,
               <span class="text-orange-400">'Github Actins'</span>]
  {'}'}

console.<span class="text-yellow-400">log</span>(<span class="text-orange-400">"Presenting you my expertise:"</span>,
            learningPath);
</code></pre>
        </div>
      </section>
      <br />

      <!-- About Section -->
      <section id="about" class="mt-18 pt-10 md:mt-32" id="about">
        <h2 class="text-primary font-code mb-8 text-2xl font-medium">
          &lt;<span class="text-white-mute font-normal">About</span>&gt;
        </h2>

        <!-- Left Content: About text and skills -->
        <div class="flex flex-col gap-6 lg:col-span-2">
          <p class="leading-relaxed text-gray-400" set:html={ABOUT_ME} />

          <!-- Skills List -->
          <div
            class="font-code text-primary mt-4 flex flex-wrap gap-x-4 gap-y-2 text-sm md:text-base"
          >
            <span>Back End Development</span>
            <span class="text-gray-600">|</span>
            <span>Front End Development</span>
            <span class="text-gray-600">|</span>
            <span>Handle DevOps</span>
            <span class="text-gray-600">|</span>
            <span>‚ù§Ô∏è building Real-Time System</span>
          </div>
        </div>
      </section>
      <br />
      <Projects />
    </main>
    <br />
    <Footer />
  </body>
</html>
