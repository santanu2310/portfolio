---
import Crousal from "../components/Crousal.astro";
import { getCollection } from "astro:content";

const client_projects = await getCollection("client_projects");

const personal_projects = (await getCollection("personal_projects")).sort(
  (a, b) => a.data.priority.valueOf() - b.data.priority.valueOf(),
);
---

<!-- Projects -->
<section class="mt-8 pt-14 md:mt-18" id="projects">
  <h2 class="text-primary font-code mb-8 text-2xl font-medium">
    &lt;<span class="text-white-mute font-normal">Projects</span>&gt;
  </h2>
  <h3 class="text-primary font-code mb-8 text-xl font-medium">
    &lt;<span class="text-white-mute font-normal">Client's</span>&gt;
  </h3>
  <div class="flex flex-col gap-16">
    {
      client_projects.map((project) => (
        <div class="flex flex-col items-start gap-8 lg:flex-row lg:gap-12">
          <div class="mt-3 flex flex-col gap-4 lg:w-2/3">
            <h3 class="text-2xl font-bold text-white">{project.data.title}</h3>
            <p
              class="leading-relaxed text-gray-400"
              set:html={project.data.description}
            />
            <div class="font-code text-primary flex flex-wrap gap-x-4 gap-y-2 pr-4 text-sm">
              {project.data.techstack.map((tech: string) => (
                <span>{tech}</span>
              ))}
            </div>
            <div class="mt-4 flex items-center gap-6">
              {project.data.siteUrl && (
                <a
                  href={project.data.siteUrl}
                  class="hover:text-primary flex items-center gap-2 text-gray-300 transition-colors duration-300"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                  Live Demo
                </a>
              )}
              {project.data.repoUrl && (
                <a
                  href={project.data.repoUrl}
                  class="hover:text-primary flex items-center gap-2 text-gray-300 transition-colors duration-300"
                >
                  <svg
                    class="h-5 w-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M12 2C6.477 2 2 6.477 2 12c0 4.418 2.865 8.168 6.839 9.49.5.092.682-.217.682-.482 0-.237-.009-.868-.014-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.031-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.378.203 2.398.1 2.651.64.7 1.03 1.595 1.03 2.688 0 3.848-2.338 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.001 10.001 0 0022 12c0-5.523-4.477-10-10-10z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  GitHub Repo
                </a>
              )}
            </div>
          </div>
          <div class="aspect-[7/5] h-auto w-full lg:w-1/3">
            <Crousal id={project.data.path} images={project.data.imageUrls} />
          </div>
        </div>
      ))
    }
  </div>

